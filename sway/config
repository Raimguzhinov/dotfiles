# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

# Styles
set $theme /usr/share/themes/yaru-sway

# theme variables
include $theme/variables

# Global variables
include $HOME/.config/sway/variables

# User variables
include $HOME/.config/sway/variables.d/*.conf

include $HOME/.config/sway/outputs
include $HOME/.config/sway/workspaces
include $HOME/.config/sway/outputs.d/*.conf
include $HOME/.config/sway/inputs/*.conf

# include modes
include $HOME/.config/sway/modes/*.conf

# Additional configs
include $HOME/.config/sway/config.d/*.conf

