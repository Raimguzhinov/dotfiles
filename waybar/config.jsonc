{
    "layer": "top",
    "position": "right",
    "width": 30,//30,
    "modules-left": ["custom/menu", "niri/workspaces"],
    "modules-center": ["niri/mode", "niri/window"],
    "modules-right": [
        "custom/wf-recorder",
        "tray",
        "niri/language",
        "clock",
        "wireplumber#sink",
        "battery",
        "custom/weather",
        "custom/playerctl",
        "cpu",
        "memory",
        // "network",
        "idle_inhibitor",
        "custom/color-picker",
        "custom/notification",
        "custom/clipboard",
        "custom/power"
    ],

